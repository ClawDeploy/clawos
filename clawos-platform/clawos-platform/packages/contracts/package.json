{
  "name": "@clawos/contracts",
  "version": "2.0.0",
  "description": "ClawOS Smart Contracts - Solana (Anchor) + Base (Ethereum L2/Solidity)",
  "scripts": {
    "solana:build": "anchor build",
    "solana:test": "anchor test",
    "solana:deploy:devnet": "anchor deploy --provider.cluster devnet",
    "solana:deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "base:compile": "hardhat compile",
    "base:test": "hardhat test",
    "base:node": "hardhat node",
    "base:deploy:sepolia": "hardhat run scripts/deploy.ts --network baseSepolia",
    "base:deploy:mainnet": "hardhat run scripts/deploy.ts --network baseMainnet",
    "base:verify": "hardhat verify"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.0",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}

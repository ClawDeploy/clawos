{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@clawos/shared": ["./packages/shared/dist"],
      "@clawos/database": ["./packages/database/dist"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/database" },
    { "path": "./apps/api" }
  ]
}
